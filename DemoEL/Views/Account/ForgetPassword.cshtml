@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="ForgetPassword">

				<input class="text" type="text" asp-for="Email" required="" placeholder="Email">
				<span class="text-danger" asp-validation-for="Email"></span>

				<input type="submit" value="Send Emil">
			</form>

		</div>
	</div>

	@section ValidationScriptSection{
		<partial name="_ValidationScriptsPartial" />
	}

