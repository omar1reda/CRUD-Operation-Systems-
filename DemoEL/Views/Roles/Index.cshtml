@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<a  class="btn btn-success h-3 mt-4 mb-3" asp-action="Create">Add Now Role</a>

<a class="btn btn-warning text-white h-3 mt-4 mb-3" asp-action="Index">All Roles</a>
<div class="m-3">
    <form asp-action="Index" class="row ">
        <input name="SearchValue" class="form-control col-md-9" placeholder="Role Name">

        <input type="Submit" value="Search" class="btn btn-primary col-md-2">
    </form>

</div>
@{


    if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>


                    <th>Edit</th>
                    <th>Details</th>
                    <th>Delet</th>
                </tr>
            </thead>

            <tbody>
                @{
                    foreach (var role in Model)
                    {
                        <tr>

                            <td>@role.Id</td>
                            <td>@role.Name</td>

                            <partial name="_ButtonPartialView" model="role.Id" />
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="alert alert-warning mt-3">There are no Employee</h3>
    }
}



