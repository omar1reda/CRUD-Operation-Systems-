@model IEnumerable<DepurtmentViewModelcs>;
@{
    ViewData["Title"] = "Index";
}

@{
    if (TempData["Message"] is not null)
    {
        <div class="alert alert-secondary">
            @TempData["Message"]
        </div>
    }
}

@{
    <a class="btn btn-success h-3 mt-4" asp-action="Add">Add Now Depurtment</a>
    if(Model.Count()>0)
    {
        <h1 class="mt-3">All Depurtment:</h1>
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Code</th>
                    <th scope="col">DataOfCarantion</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delet</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var depurtment in Model)
                    {
                        <tr >
                            <td>@depurtment.Name</td>
                            <td>@depurtment.Code</td>
                            <td>@depurtment.DataOfCarantion</td>

                            <partial name="_ButtonPartialView" model="depurtment.Id.ToString()" />
                        </tr>
                    }
                 }


            </tbody>
        </table>
    }

    else
    {
        <h3 class="alert alert-warning mt-3">There are no depurtment</h3>
    }
}



